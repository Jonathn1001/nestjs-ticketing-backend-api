  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug nestjs",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nest",
      "stopOnEntry": true,
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/app.controller.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}
